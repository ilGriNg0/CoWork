<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:AvaloniaApplication4.ViewModels"
             x:Class="AvaloniaApplication4.Views.CardOpenView"
             x:DataType="vm:CardOpenViewModel">

    <ScrollViewer Background="#434B4D">
           <Grid ColumnDefinitions="*,*,*"
                 RowDefinitions="*,*,*" ShowGridLines="True" >
                 <Border Grid.Row="0" 
                         Grid.Column="0"
                         CornerRadius="15"
                         ClipToBounds="True"
                         Margin="10"
                         >
					 <Image Source="../Assets/prosto.jpg"
                            Stretch="UniformToFill">
                     </Image>
                 </Border>
			   <Border Grid.Row="0"
                       Grid.Column="1"
                       Padding="5">
                   <Grid RowDefinitions="*,*" ShowGridLines="False">
                   </Grid>
                  
               </Border>
               <Border Grid.Row="0"
                       Grid.Column="2">
				   <Grid RowDefinitions="*,*" ShowGridLines="True">
                       <Image Grid.Row="0" Source="../Assets/prosto.jpg"></Image>
                   </Grid>
               </Border>
                <DockPanel  Grid.ColumnSpan="2" 
                            Grid.Row="1">
                     <Grid ColumnDefinitions="100, *"
                           RowDefinitions="*,*,*"
                           ShowGridLines="True">
                         <Image Grid.Row="0"
                                Grid.Column="0"
                                Stretch="UniformToFill"
                                Source="../Assets/prostoLogo.jpg"
                                Margin="10"/>
                         <TextBlock Grid.Row="0" Grid.Column="1"
                                    Text="Просто"
                                    FontSize="20"
                                    FontWeight="DemiBold"
                                    Foreground="White"
                                    Padding="9"
                                   >
                         </TextBlock>
                         <TextBlock Grid.Row="0" Grid.Column="1"
                                    TextWrapping="Wrap"
                                    Foreground="White"
                                    FontWeight="UltraBold"
                                    FontSize="13"
                                    Padding="11"
                                    Margin="20"
                                    HorizontalAlignment="Center"
                                    Text="Проект ПРОСТО в Санкт-Петербурге, реализуемый Комитетом по молодежной политике, направлен на поддержку самореализации молодежи, раскрытие их потенциала для развития города, интеграцию в общество и укрепление их роли в жизни города и страны.">
                         </TextBlock>
                        
                        <StackPanel Grid.ColumnSpan="2"
                                 Grid.Row="1"
                                 HorizontalAlignment="Center"
                                 Orientation="Horizontal">
                            <Border Background="AliceBlue"
                                    CornerRadius="15"
                                    Margin="15 5 25 5">
								<TextBlock Text="Ноутбук"
                                           Margin="5">
                                    <PathIcon Data="{StaticResource laptop_regular}"></PathIcon>
                                </TextBlock>
                            </Border>
                           <Border Background="AliceBlue"
                                   CornerRadius="15"
                                   Margin="15 5 25 5">
							   <TextBlock Text="Принтер МФУ"
                                          Margin="5">
                                   <PathIcon Data="{StaticResource print_regular}"></PathIcon>
                               </TextBlock>
                           </Border>
                            <Border Background="AliceBlue"
                                    CornerRadius="15"
                                    Margin="15 5 25 5">
                                <TextBlock Text="Флипчарт"
                                           Margin="5">
                                    <PathIcon Data="{StaticResource laptop_regular}"></PathIcon>
                                </TextBlock>
                            </Border>
                            <Border Background="AliceBlue"
                                    CornerRadius="15"
                                    Margin="15 5 25 5">
                                <TextBlock Text="Расходные материалы"
                                           Margin="5">
                                    <PathIcon Data="{StaticResource document_copy_regular}"></PathIcon>
                                </TextBlock>
							</Border>
                        </StackPanel>
                     </Grid>
                </DockPanel>
           </Grid>
    </ScrollViewer>
</UserControl>
