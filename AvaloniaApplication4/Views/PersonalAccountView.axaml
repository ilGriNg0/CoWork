<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="AvaloniaApplication4.Views.PersonalAccountView" Background="#161616">
	<Grid
		ColumnDefinitions="2*, 3*"
		ShowGridLines="True">
		<DockPanel
			Grid.Column="0">
			<StackPanel 
				DockPanel.Dock="Top"
				Spacing="30">
				<StackPanel
					Orientation="Horizontal"
					Margin="100 50 0 0"
					Spacing="50">
					<Border
						HorizontalAlignment="Left"
						BorderBrush="#D94D04"
						BorderThickness="15"
						Width="200"
						Height="200"
						ClipToBounds="True"
						CornerRadius="270">
						<Image
							Source="../Assets/nophoto.png"
							Height="270"
							Width="400">
						</Image>
					</Border>

					<StackPanel>
						<TextBlock
							Foreground="#ffffff"
							FontSize="50"
							FontWeight="700"
							TextAlignment="Center"
							LetterSpacing="0"
							LineHeight="60"
							FontFamily="Source Sans Pro"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Text="{Binding First}">
						</TextBlock>

						<TextBlock
							Foreground="#ffffff"
							FontSize="50"
							FontWeight="700"
							TextAlignment="Center"
							LetterSpacing="0"
							LineHeight="60"
							FontFamily="Source Sans Pro"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Text="{Binding Last}">
						</TextBlock>

						<TextBlock
							Foreground="#ffffff"
							FontSize="30"
							FontWeight="700"
							TextAlignment="Center"
							LetterSpacing="0"
							LineHeight="60"
							FontFamily="Source Sans Pro"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Text="{Binding Date}">
						</TextBlock>
					</StackPanel>
				</StackPanel>

				<TextBox
					Classes="Poleacc"
					Margin="0 40 0 0"
					Watermark="Email"
					ToolTip.Tip="Пример: ivanivanov@gmail.com"
					Text="{Binding Email}"
					Foreground="#ffffff"
					IsEnabled="False">
				</TextBox>

				<MaskedTextBox
					Classes="Poleacc"
					Mask="Телефон +7-000-000-00-00"
					ToolTip.Tip="Пример +7-777-777-77-77"
					Text="{Binding Phone}"
					Foreground="#ffffff"
					IsEnabled="False">
				</MaskedTextBox>

				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Spacing="20">

					<TextBox
						Classes="Poleacc"
						Watermark="Пароль"
						ToolTip.Tip="Минимум 8 символов Пример: Qwerty12@"
						Text="{Binding Password}"
						Foreground="#ffffff"
						IsEnabled="False"
						Margin="50 0 0 0"
						PasswordChar="{Binding Charac}">
					</TextBox>
					<CheckBox
						IsChecked="{Binding IsChecked, Mode=TwoWay}">
					</CheckBox>
				</StackPanel>

				<TextBlock
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Foreground="#ffffff"
					FontSize="25"
					FontStyle="Italic"
					FontWeight="700"
					LineHeight="50"
					FontFamily="Gelion"
					PointerPressed="Change_PointerPressed"
					TextAlignment="Left">
					Изменить данные
				</TextBlock>
				
				<Button
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					FontSize="25"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					FontFamily="Gelion"
					CornerRadius="50"
					Height="70"
					Width="400"
					Margin="0 0 0 0"
					Click="Exit_Click">
					Выйти
					<Button.Styles>
						<Style Selector="Button">
							<Setter Property="Background" Value="#ffffff" />
							<Setter Property="Foreground" Value="#161616" />
						</Style>
						<Style Selector="Button:pointerover /template/ ContentPresenter">
							<Setter Property="Background" Value="#D94D04" />
							<Setter Property="Foreground" Value="#ffffff" />
						</Style>
					</Button.Styles>
					<Button.Transitions>
						<Transitions>
							<BrushTransition Property="Background" Duration="0:0:0.1"/>
						</Transitions>
					</Button.Transitions>
				</Button>	
			</StackPanel>
		</DockPanel>


		<DockPanel
			Grid.Column="1">
			<Grid
				RowDefinitions="*, *"
				ShowGridLines="True">
				<StackPanel
					Grid.Row="0"
					HorizontalAlignment="Center">
					<TextBlock
						Margin="0 50 0 0"
						Foreground="#ffffff"
						FontSize="40"
						FontWeight="700"
						TextAlignment="Center"
						LetterSpacing="0"
						LineHeight="90"
						FontFamily="Source Sans Pro"
						HorizontalAlignment="Center"
						VerticalAlignment="Center">
						Будущие бронирования
					</TextBlock>

					<ScrollViewer
						HorizontalScrollBarVisibility="Visible">
					<StackPanel
						Orientation="Horizontal"
						Spacing="30"
						Margin="0 0 0 20">
						<Border
							Width="350"
							Height="350"
							Background="#D94D04"
							CornerRadius="50">
						
						</Border>
						<Border
							Width="350"
							Height="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
						<Border
							Width="350"
							Height="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
						<Border
							Height="350"
							Width="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
					</StackPanel>
					</ScrollViewer>
				</StackPanel>

				<StackPanel
					Grid.Row="1"
					HorizontalAlignment="Center">
					<TextBlock
						Margin="0 0 0 0"
						Foreground="#ffffff"
						FontSize="40"
						FontWeight="700"
						TextAlignment="Center"
						LetterSpacing="0"
						LineHeight="90"
						FontFamily="Source Sans Pro"
						HorizontalAlignment="Center"
						VerticalAlignment="Center">
						Прошедшие бронирования
					</TextBlock>

					<ScrollViewer
						HorizontalScrollBarVisibility="Visible">
					<StackPanel
						Orientation="Horizontal"
						Spacing="30"
						Margin="0 0 0 20">
						<Border
							Height="350"
							Width="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
						<Border
							Height="350"
							Width="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
						<Border
							Height="350"
							Width="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
						<Border
							Height="350"
							Width="350"
							Background="#D94D04"
							CornerRadius="50">

						</Border>
					</StackPanel>
					</ScrollViewer>
				</StackPanel>
			</Grid>
		</DockPanel>
	</Grid>
</UserControl>
