<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication4.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication4.Views.CardView"
             xmlns:local='clr-namespace:AvaloniaApplication4.ViewModels'
             x:DataType="vm:CardViewModel">
  
    <Grid ColumnDefinitions="*,*,*"
          RowDefinitions="*,*,*,*" ShowGridLines="True">
		<DockPanel Grid.Column="0">
			<TextBlock
				FontFamily="Source Sans Pro"
				FontSize="25"
				Foreground="White"
				FontWeight="600"
				LineHeight="32"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Left"
				Margin="10 0 0 0"
				DockPanel.Dock="Bottom">
				Coworking Spaces
			</TextBlock>
			<TextBlock
				FontFamily="Source Sans Pro"
				FontSize="32"
				Foreground="White"
				FontWeight="700"
				LineHeight="38"
				Margin="10 0 0 0"
				DockPanel.Dock="Top">
				CoWork
			</TextBlock>
	
		
				
			
		</DockPanel>
                    <Border  x:Name="Bord"
                              IsEnabled="True"
                              Grid.Column="0"
                              Grid.Row="1"
                              Background="#A5A5A5"
                              BoxShadow="4 4 4 0 Gray"
                              CornerRadius="15"
							  Margin="10 0 10 0"
                              MinHeight="100"
                              MinWidth="250"
                              HorizontalAlignment="Left"
							  PointerPressed="InputElement_OnPointerPressed"
                              >
                        <Grid  ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*" ShowGridLines="False">
							<Border Grid.RowSpan="2"
									Grid.ColumnSpan="4"
									CornerRadius="15"
									ClipToBounds="True"
									HorizontalAlignment="Center">

								<Image Source="../Assets/prosto.jpg"
									   Stretch="UniformToFill">
                                </Image>
							</Border>
                            
							<Border Grid.Column="0"
									Grid.ColumnSpan="4"
									Grid.Row="2"
									>
								<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" ShowGridLines="False">
									<ItemsControl 	Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Border1}">
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<TextBlock
											   Text="{Binding Name_cowork}"
											   Foreground="White"
											   FontSize="20"
											   FontWeight="DemiBold"
											   HorizontalAlignment="Center">
												</TextBlock>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
									

								</Grid>
							</Border>
							<Border Grid.Column="0"
									Grid.ColumnSpan="4"
									Grid.Row="3">
								<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" ShowGridLines="False">
									<PathIcon Data="{StaticResource person_regular}"
											  Grid.Column="3"
											  Grid.Row="0"
											  HorizontalAlignment="Left"
											  VerticalAlignment="Center"
											  ToolTip.Tip="Рабочее место">
									</PathIcon>
									<PathIcon Data="{StaticResource people_team_regular}"
											  Grid.Column="3"
											  Grid.Row="1"
											  HorizontalAlignment="Left"
											  VerticalAlignment="Center"
											  ToolTip.Tip="Переговорная">
									</PathIcon>
									<ItemsControl 	Grid.Column="3" Grid.Row="0" ItemsSource="{Binding Border1}">
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<TextBlock Text="{Binding Price_day_cowork}"
											   FontFamily="Source Sans Pro"
												FontSize="17"
												Foreground="Black"
												FontWeight="600"
												LineHeight="32"
											  
											   VerticalAlignment="Center"
											   HorizontalAlignment="Right"
											   />
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
									<ItemsControl 	Grid.Column="3" Grid.Row="1" ItemsSource="{Binding Border1}">
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<TextBlock Text="{Binding Price_meetingroom_cowork}"
											    FontSize="15"
												Foreground="Black"
												FontWeight="600"
												LineHeight="32"
											   VerticalAlignment="Center"
											   HorizontalAlignment="Right"
											  />
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
									
									
								</Grid>
							</Border>
						</Grid>
                       
					</Border>
		            <Border 
                              IsEnabled=""
							  Margin="10 0 10 0"
                              Grid.Column="1"
                              Grid.Row="1"
                              Background="#A5A5A5"
                              BoxShadow="4 4 4 0 Gray"
                              CornerRadius="15"
                              MinHeight="100"
                              MinWidth="250"
                              HorizontalAlignment="Left"
                              PointerPressed="Border2_PointerPressed"
                              >
			<Grid  ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*" ShowGridLines="False">
				<Border Grid.RowSpan="2"
						Grid.ColumnSpan="4"
						CornerRadius="15"
						ClipToBounds="True"
						HorizontalAlignment="Center">

					<Image Source="../Assets/prosto.jpg"
						   Stretch="UniformToFill">
					</Image>
				</Border>

				<Border Grid.Column="0" Grid.ColumnSpan="4"
						Grid.Row="2">
					<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" ShowGridLines="False">
						<ItemsControl 	Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Border2}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<TextBlock
								   Text="{Binding Name_cowork}"
								   Foreground="White"
								   FontSize="20"
								   FontWeight="DemiBold"
								   HorizontalAlignment="Center">
									</TextBlock>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>

					</Grid>
				</Border>
				<Border Grid.Column="0" Grid.ColumnSpan="4"
						Grid.Row="3">
					<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" ShowGridLines="False">
						<ItemsControl 	Grid.Column="3" Grid.Row="0" ItemsSource="{Binding Border2}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Price_day_cowork}"
								   FontFamily="Source Sans Pro"
									FontSize="17"
									Foreground="Black"
									FontWeight="600"
									LineHeight="32"
											  
								   VerticalAlignment="Center"
								   HorizontalAlignment="Right"
											   />
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
						<ItemsControl 	Grid.Column="3" Grid.Row="1" ItemsSource="{Binding Border2}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Price_meetingroom_cowork}"
									FontSize="15"
									Foreground="Black"
									FontWeight="600"
									LineHeight="32"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Right"
											  />
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
						<PathIcon Data="{StaticResource person_regular}"
								  Grid.Column="3"
								  Grid.Row="0"
								  HorizontalAlignment="Left"
								  VerticalAlignment="Center"
								  ToolTip.Tip="Рабочее место">
						</PathIcon>
						<PathIcon Data="{StaticResource people_team_regular}"
								  Grid.Column="3"
								  Grid.Row="1"
								  HorizontalAlignment="Left"
								  VerticalAlignment="Center"
								  ToolTip.Tip="Переговорная">
						</PathIcon>
						
					</Grid>
				</Border>
			</Grid>
		</Border>
		<Border
            IsEnabled=""
            Margin="10 0 10 0"
            Grid.Column="2"
            Grid.Row="1"
            Background="#A5A5A5"
            BoxShadow="4 4 4 0 Gray"
            CornerRadius="15"
            MinHeight="100"
            MinWidth="250"
			
            HorizontalAlignment="Left"
            PointerPressed="Border3_PointerPressed">
			<Grid  ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*" ShowGridLines="False">
				<Border Grid.RowSpan="2"
						Grid.ColumnSpan="4"
						CornerRadius="15"
						ClipToBounds="True"
						HorizontalAlignment="Center">

					<Image Source="../Assets/prosto.jpg"
						   Stretch="UniformToFill">
					</Image>
				</Border>

				<Border Grid.Column="0" Grid.ColumnSpan="4"
						Grid.Row="2">
					<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" ShowGridLines="False">
						<ItemsControl 	Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Border3}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<TextBlock
								   Text="{Binding Name_cowork}"
								   Foreground="White"
								   FontSize="20"
								   FontWeight="DemiBold"
								   HorizontalAlignment="Center">
									</TextBlock>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>

					</Grid>
				</Border>
				<Border Grid.Column="0" Grid.ColumnSpan="4"
						Grid.Row="3">
					<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" ShowGridLines="False">
						<ItemsControl 	Grid.Column="3" Grid.Row="0" ItemsSource="{Binding Border3}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Price_day_cowork}"
								   FontFamily="Source Sans Pro"
									FontSize="17"
									Foreground="Black"
									FontWeight="600"
									LineHeight="32"
											  
								   VerticalAlignment="Center"
								   HorizontalAlignment="Right"
											   />
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
						<ItemsControl 	Grid.Column="3" Grid.Row="1" ItemsSource="{Binding Border3}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Price_meetingroom_cowork}"
									FontSize="15"
									Foreground="Black"
									FontWeight="600"
									LineHeight="32"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Right"
											  />
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
						<PathIcon Data="{StaticResource person_regular}"
								  Grid.Column="3"
								  Grid.Row="0"
								  HorizontalAlignment="Left"
								  VerticalAlignment="Center"
								  ToolTip.Tip="Рабочее место">
						</PathIcon>
						<PathIcon Data="{StaticResource people_team_regular}"
								  Grid.Column="3"
								  Grid.Row="1"
								  HorizontalAlignment="Left"
								  VerticalAlignment="Center"
								  ToolTip.Tip="Переговорная">
						</PathIcon>
					
					</Grid>
				</Border>
			</Grid>
		</Border>
		
	
                    <TransitioningContentControl  Grid.ColumnSpan="4" Grid.RowSpan="4" x:Name="ContentControl"/>
					
	</Grid>
	

</UserControl>
