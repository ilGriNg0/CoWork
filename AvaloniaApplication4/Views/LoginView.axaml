<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvaloniaApplication4.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication4.Views.LoginView"
			 x:DataType="vm:LoginViewModel">
	<DockPanel>
		<TextBlock Text="Login" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center"
				   Margin="0 10 0 20"
				   FontSize="26" FontWeight="Medium" />
		<Button Content="Login" Background="Aqua" DockPanel.Dock="Bottom"
				HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
				Margin="0 10 0 0" Height="50" FontSize="18"
				Command="{Binding LoginCommand}"/>
		<StackPanel Spacing="10">
			<TextBox
				Padding="10" Margin="5" Height="50" VerticalContentAlignment="Center"
				Watermark="Email" AcceptsReturn="False"
				FontSize="16" MaxLines="1" Text="{Binding Email}">
			</TextBox>
			<TextBox
				Padding="10" Margin="5" Height="50" VerticalContentAlignment="Center"
				Watermark="Password" AcceptsReturn="False"
				FontSize="16" MaxLines="1" Text="{Binding Password}"
				PasswordChar="*">
			</TextBox>	
		</StackPanel>
	</DockPanel>
</UserControl>
